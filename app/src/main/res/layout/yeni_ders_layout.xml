<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <AutoCompleteTextView
            android:hint="@string/ders"
            android:layout_width="282dp"
            android:layout_height="45dp"
            android:id="@+id/etYeniDersAd"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnDersSil"/>
    <Spinner
            android:layout_width="175dp"
            android:layout_height="36dp"
            android:entries="@array/krediler"
            android:id="@+id/spnYeniDersKredi" android:layout_marginStart="29dp"
            app:layout_constraintStart_toEndOf="@+id/spnYeniDersNotu" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/etYeniDersAd"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Spinner
            android:layout_width="175dp"
            android:layout_height="36dp"
            android:entries="@array/tumNotlar"
            android:id="@+id/spnYeniDersNotu" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/spnYeniDersKredi" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/etYeniDersAd"/>
    <Button
            android:background="@drawable/delete"
            android:layout_width="51dp"
            android:layout_height="45dp"
            android:id="@+id/btnDersSil" android:layout_marginStart="22dp"
            app:layout_constraintStart_toEndOf="@+id/etYeniDersAd" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/spnYeniDersKredi" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="1.0"/>
    <View

            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/spnYeniDersNotu" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>